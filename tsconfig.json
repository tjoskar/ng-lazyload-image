{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["dom", "es6"],
    "suppressImplicitAnyIndexErrors": true
  },
  "compileOnSave": false,
  "include": ["./index.ts", "src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist", "compiled", "example/**/*.ts"],
  "angularCompilerOptions": {
    "genDir": "dist",
    "strictMetadataEmit": true
  }
}
